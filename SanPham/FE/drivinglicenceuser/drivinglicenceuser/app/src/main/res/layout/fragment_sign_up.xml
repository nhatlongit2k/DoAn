<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_wellcome_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_illustration"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:src="@mipmap/ic_driving"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/TextStyle33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký tài khoản"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_illustration" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="63dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_wellcome_login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/edt_new_account_fragment_first_name"
                style="@style/TextStyle35"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:hint="Họ"
                android:paddingLeft="22dp" />

            <EditText
                android:id="@+id/edt_new_account_fragment_last_name"
                style="@style/TextStyle35"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:hint="Tên"
                android:paddingLeft="22dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_new_account_fragment_username"
            style="@style/TextStyle35"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_edittext"
            android:hint="Tên đăng nhập"
            android:paddingLeft="22dp" />

        <EditText
            android:id="@+id/edt_new_account_fragment_password"
            style="@style/TextStyle35"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_edittext"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="22dp" />

        <EditText
            android:id="@+id/edt_new_account_fragment_confrim_password"
            style="@style/TextStyle35"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_edittext"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="+84"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edt_new_account_fragment_phone_number"
                style="@style/TextStyle35"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Số điện thoại"
                android:inputType="number"
                android:maxLength="9"
                android:paddingLeft="22dp" />
        </LinearLayout>


        <EditText
            android:id="@+id/edt_new_account_fragment_email"
            style="@style/TextStyle35"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_edittext"
            android:hint="Email"
            android:paddingLeft="22dp" />

        <Button
            android:id="@+id/bt_new_account_fragment"
            style="@style/TextStyle34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.5dp"
            android:background="@drawable/background_button"
            android:paddingVertical="17dp"
            android:text="ĐĂNG KÝ"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
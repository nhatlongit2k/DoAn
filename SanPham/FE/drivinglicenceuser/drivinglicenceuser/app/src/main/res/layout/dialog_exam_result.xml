<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_result_tile_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Chúc mừng"
            android:textColor="@color/medium_spring_greem"
            android:textSize="50dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_result_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Bạn đã vượt qua bài test"
            android:textColor="@color/medium_spring_greem"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/img_is_pass"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_check_192"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_number_correct_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đúng 21/25 câu"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@color/medium_spring_greem"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_see_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Xem lại đáp án"
            android:textColor="#0E94FF"
            android:textSize="14dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ok"
            android:textColor="#0E94FF"
            android:textSize="14dp" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>